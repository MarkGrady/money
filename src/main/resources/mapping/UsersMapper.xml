<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.money.mapper.UserMapper">
    <resultMap id="userMap" type="com.qf.money.pojo.User">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="pw" property="pw"></result>
        <result column="imgurl" property="imgurl"></result>
    </resultMap>

    <sql id="userColumns">${alias}.id,${alias}.name,${alias}.pw,${alias}.imgurl</sql>

    <!--用户注册-->
    <insert id="UserRegister">
        insert into user(id,name,pw,imgurl) values (#{id},#{name},#{pw},#{imgurl})
    </insert>
    <!--用户登录-->
    <select id="UserLogin" resultMap="userMap">
        select
        <include refid="userColumns"><property name="alias" value="u1"/></include>
        from user u1 where
    </select>
    <!-- <select id="select" resultMap="userMap">
         select
         <include refid="userColumns"><property name="alias" value="u1"/></include>
         from user u1 where u1.id=#{id}
     </select>-->

    <select id="search" resultMap="userMap">
        select
        <include refid="userColumns"><property name="alias" value="u1"/></include>
        from user u1
    </select>

    <!--<select id="research" resultMap="userMap">
        select
        <include refid="userColumns"><property name="alias" value="u1"/></include>
        from t_user u1 where username like "%"#{username}"%"
    </select>-->

    <delete id="del">
        delete from user where id=#{id}
    </delete>

    <update id="update">
        update user set name=#{name},pw=#{pw},imgurl=#{imgurl} where id=#{id}
    </update>
</mapper>